<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_branch"
    style="@style/ListItem"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="@drawable/selector_ref_footer"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:visibility="gone">

    <TextView
        android:id="@+id/tvBranchIcon"
        style="@style/PrimaryIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/icon_fork"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvBranch"
        style="@style/HeaderTitleText"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tvBranchIcon"
        android:layout_toRightOf="@id/tvBranchIcon"
        android:paddingBottom="0dp"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</RelativeLayout>