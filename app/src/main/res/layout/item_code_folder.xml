<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItem">

    <TextView
        android:id="@+id/tv_folder_icon"
        style="@style/EventIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/icon_folder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tv_folder_icon"
        android:layout_toRightOf="@id/tv_folder_icon"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/tv_folder"
            style="@style/ListTitleText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingEnd="5dp"
            android:paddingRight="5dp" />

        <TextView
            android:id="@+id/tv_folders_icon"
            style="@style/ListIcon"
            android:text="@string/icon_folder" />

        <TextView
            android:id="@+id/tv_folders"
            style="@style/ListNumericSubtitleText"
            android:paddingEnd="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingStart="5dp" />

        <TextView
            android:id="@+id/tv_files_icon"
            style="@style/ListIcon"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:text="@string/icon_file" />

        <TextView
            android:id="@+id/tv_files"
            style="@style/ListNumericSubtitleText"
            android:paddingLeft="5dp"
            android:paddingStart="5dp" />
    </LinearLayout>

</RelativeLayout>
