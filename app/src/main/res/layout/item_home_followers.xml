<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItem"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mIvAvatar"
        style="@style/AvatarXLarge" />

    <TextView
        android:id="@+id/mTvFollowerAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_size_3"
        android:layout_toRightOf="@+id/mIvAvatar"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/app_text_size_5" />
</RelativeLayout>